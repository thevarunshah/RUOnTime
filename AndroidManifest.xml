<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thevarunshah.ruontime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thevarunshah.ruontime.HomeScreen"
            android:theme="@style/SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.RoutesScreen"
            android:label="@string/routes" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.RouteStopsScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.StopsScreen"
            android:label="@string/stops" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.FavoritesScreen"
            android:label="@string/favorites" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.StopRoutesScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.PossibleRoutesSelectionScreen"
            android:label="@string/possible_routes_selection" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.PossibleRoutesResultsScreen"
            android:label="@string/possible_routes" >
        </activity>
        <activity
            android:name="com.thevarunshah.ruontime.AboutScreen"
            android:label="@string/about" >
        </activity>
    </application>

</manifest>