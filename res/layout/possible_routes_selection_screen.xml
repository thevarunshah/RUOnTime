<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/startStopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#dd4b39"
        android:text="From:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/startStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />
    
    <ImageButton 
        android:id="@+id/swapSelections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingRight="5dp"
        android:src="@drawable/ic_swap_vert_black_36dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/destinationStopText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#dd4b39"
        android:text="To:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/destinationStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp" />

    <Button
        android:id="@+id/findPossibleRoutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#dd4b39"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:text="Find Possible Routes!" />

</LinearLayout>
