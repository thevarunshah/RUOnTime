<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/app_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="App created by: Varun Shah"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="Bugs/Comments? varun.shah@rutgers.edu"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />
    
    <TextView
        android:id="@+id/thankYous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Thank You:\n-Pranav Patel: UI/UX Comments\n-Vaibhav Patel: UI/Logo Feedback"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/rudots_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="To view bus route maps and more information about busses, visit RU DOTS"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    
    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Copyright 2015 Varun Shah\nLicensed under the Apache License, Version 2.0 (the 'License')"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
